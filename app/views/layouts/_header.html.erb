<header class="navbar navbar-fixed-top" style="padding: 5px; background-color: #083952">
  <div>
    <div class="container">
      	<a href="/gists" class="btn btn-primary btn-lg active" role="button">Strona główna</a>
	<a href="https://github.com/lipek92/PANDA5" class="btn btn-primary btn-lg active github" role="button">Projekt na Github'ie</a>
	<div class="pull-right" style="padding: 3px;">
  		<% if session[:user_id] %>
   		 <div class="logged-in">Zalogowany jako <%= current_user.email %></div> 
  		  <%= link_to "Wyloguj", session_path("current"), method: "delete" %>
  		<% else %>
   		 <%= link_to "Rejestracja", new_user_path %> |
   		 <%= link_to "Logowanie", new_session_path %>
 		 <% end %>
 		 <%= form_tag gists_path, :method => 'get',:class =>"form-search", :id => "gists_search" do %>
 		 <%= text_field_tag :search, params[:search], :class => 'input search-query'%>
  		<%= submit_tag "Szukaj", :name => nil, :class => 'btn btn-primary active' %>
  		<% end %>
	</div>
    </div>
  </div>
</header>
