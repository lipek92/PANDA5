<h1>Rejestracja</h1>


<div class="errors">
<% if @user.errors.full_messages.any? %>
<% @user.errors.full_messages.each do |error_message| %>
	<p><%= error_message if @user.errors.full_messages.first == error_message %> </p>
<% end %>
<% end %>
</div>


<%= form_for @user do |f| %>
  <div class="inputs">
  	<p>Email: </p>
    <p><%= f.text_field :email %></p>
   	<p>Hasło: </p>
    <p><%= f.password_field :password %></p>
    <p>Powtórz hasło: </p>
    <p><%= f.password_field :password_confirmation %></p>
  </div>
  <div class="actions">
    <%= f.submit "Zarejestruj!", class: 'btn btn-primary' %>
  </div>
<% end %>